    $(document).ready(function(){
      ListType2 = $(".list-collection-products.{{section.id}}");
      ListType2.owlCarousel({
      loop:false,
      autoPlay: false,
      nav:true,
      navContainer: ".list-collection-product-items .nav_list_type2_items.{{section.id}}",
      navText: ['<a class="prev"></a>',' <a class="next"></a>'],
