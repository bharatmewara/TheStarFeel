<div data-section-id="{{ section.id }}"  data-section-type="home-product-grid-type-12-b" class="home-product-grid-type-12-b">
  <div class="container">
    {%- assign collection = collections[section.settings.collection] -%}   

    {% if section.settings.title != blank or section.settings.small_title != blank %}
    <div class="border-title">
      {% if section.settings.title != blank %}
      <h2 class="section-header__title" style="color:{{ section.settings.title_color }};">    
        {{ section.settings.title }}
      </h2>
      {% endif %}      
      {% if section.settings.small_title != blank %}<div class="short-desc">  <p style="color:{{ section.settings.small_title_color }};">{{ section.settings.small_title }}</p></div>{% endif %}   
    </div>
    {% endif %}
    <div class="product-grid-type-12">
      {% assign grid_item_width = ' ' %} 
      <ul class="grid-uniform product-grid-type__12-b {{ section.id }} owl-carousel owl-theme">
        {% for product in collection.products %}
        {% include 'product-grid-item', grid_item_width:grid_item_width %}          
        {% else %}
                  {% for i in (1..8) %}
                  <li class="grid__item item-row  on-sale" id="product-{{ i }}">
                    <div class="products">
                      <div class="product-container">
                        <a href="#" class="grid-link"> 
                          {% if forloop.index == 3 %}
                          <div class="featured-tag">
                            <span class="badge badge--sale">
                              <span class="gift-tag badge__text{% if sale_text.size > 7 %} badge__text--small{% endif %}">{{ 'products.product.sale' | t }}</span>
                            </span>
                          </div>{% endif %}

                          <div class="reveal"> 
                            {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                            {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }} 
                          </div>
                        </a>
                        <div class="ImageWrapper">
                          <div class="product-button">
                            <div class="button-row-1">
                              <a href="#" class="quick-view-text"> 
                                <i class="zmdi zmdi-eye"></i>
                              </a>
                              <a href="{{ product.url }}">                      
                                <i class="zmdi zmdi-link"></i>
                              </a>  
                            </div>
                            <div class="button-row-2">
                              <form action="#" method="post" class="variants clearfix" id="cart-form-6529189125">
                                <input type="hidden" name="id" value="21661289093">
                                <a href="#" class="add-cart-btn"><i class="zmdi zmdi-shopping-cart"></i> </a>
                              </form>
                              <a href="/account/login" class="wishlist"><i class="zmdi zmdi-favorite-outline"></i></a> 

                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="product-detail"> 
                        <a href="#" class="grid-link__title">Sample title {{ i }}</a>

                        <div class="grid-link__meta">
                          <div class="product_price"> <span class="money" data-currency-usd="$320.00">$0.00</span> </div>
                          <del class="grid-link__sale_price"><span class="money" data-currency-usd="$756.00">$0.00</span></del> </div>
                        <span class="spr-badge" id="spr_badge_6529189125" data-rating="0.0"> 
                          <span class="spr-starrating spr-badge-starrating"><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i></span> <span class="spr-badge-caption"> </span> </span>

                      </div>
                    </div>
                  </li>
                  {% endfor %} 
                  {% endfor %}
      </ul>
      <div class="nav_product-grid-type__12-b"> </div>

    </div>
    <style>
      .home-product-grid-type-12-b .nav_product-grid-type__12 a {  color:{{ section.settings.arrow_text_clr }}; }
      .home-product-grid-type-12-b .nav_product-grid-type__12 a:hover {  color:{{ section.settings.arrow_text_hover_clr }}; }
      {% if section.settings.heading_image_need %} .home-product-grid-type-12-b .border-title h2 {  content:"";display:inline-block;background-repeat:no-repeat;

      
      
    -webkit-text-fill-color: transparent;
    background: -o-linear-gradient(transparent, transparent);
     -webkit-background-clip: text; 
    background-image: -webkit-linear-gradient(transparent, transparent), url({{ section.settings.heading_image | img_url: 'master' }});
    background-position: left;
    background-size: 125%;  
      
      } {% endif %}
      
    </style>
  </div>
  <div class="dt-sc-hr-invisible-large"></div> 
</div>

<script type="text/javascript">
  $(document).ready(function(){   
      var grid_type_12 = $(".product-grid-type__12-b.{{ section.id }}");
      grid_type_12.owlCarousel({
        loop:false,
        margin:0,
        nav:true,
        navContainer: ".nav_product-grid-type__12-b",
        navText: ['<a class="prev"></a>','<a class="next"></a>'],
        dots: false,
        responsive:{
                           0:{
                           items:1
                           },
                           568:{
                           items:2
                           },
                           768:{
                           items:3
                           },
                           1000:{
                           items:{{ section.settings.items }}
                           }
        }
      });
      
  });
      
</script>
{% schema %}
{
  "name": "Home Product Carousel",
  "class": "index-section",
  "settings": [ 
{
      "type": "checkbox",
      "id": "heading_image_need",
      "label": "Show Heading Image ?"
      
    },	
{
      "type": "image_picker",
      "id": "heading_image",
      "label": "Image",
	  "info": "Size: 105x17"
      
    },
	{
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "New arrivals"
    },	
	{
      "type": "color",
      "id": "title_color",
      "label": "Heading Color",
      "default": "#000"
    },	
	{
      "type": "text",
      "id": "small_title",
      "label": "Small Heading"
    },
	{
      "type": "color",
      "id": "small_title_color",
      "label": "Small Heading Color",
      "default": "#000"
    },	
	{
      "type": "color",
      "id": "arrow_text_clr",
      "label": "Arrow Text",
 	  "default":"#000"
      
    },
	{
      "type": "color",
      "id": "arrow_text_hover_clr",
      "label": "Arrow Hover Text",
 	  "default":"#000"
      
    },

    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
{
      "type": "select",
      "id": "items",
      "label": "Carousel Items",
      "default": "left",
      "options": [
		{
          "value": "1",
          "label": "1"
        },        
		{
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
		{
          "value": "4",
          "label": "4"
        },
		{
          "value": "5",
          "label": "5"
        },
		{
          "value": "6",
          "label": "6"
        }
      ],
 		"default": "4",
        "info": "4"
    }
  
  ],
  "presets": [
    {
      "name": "Home Product Carousel",
      "category": "Collection"
    }
  ]
}
{% endschema %}



