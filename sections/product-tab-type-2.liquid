<div data-section-id="{{ section.id }}"  data-section-type="product-tab-type-2" class="product-tab-type-2" style="float:left;width:100%;">     
  <div class="container">

    <div class="full_width_tab">    
      <div class="grid-uniform">          

        <div class="grid__item">      
          <div class="dt-sc-tabs-container-section"> 
             {% if section.settings.title != blank or section.settings.small_title != blank %}
    <div class="border-title">
      {% if section.settings.title != blank %}
      <h2 class="section-header__title" style="color:{{ section.settings.title_color }};">    
        {{ section.settings.title }}
      </h2>
      {% endif %}      
      {% if section.settings.small_title != blank %}<div class="short-desc">  <p style="color:{{ section.settings.small_title_color }};">{{ section.settings.small_title }}</p></div>{% endif %}   
    </div>
    {% endif %}
           
            {% if section.blocks.size > 0 %} 
            <div class="dt-sc-tabs-container"> 
              <ul class="dt-sc-tabs wow fadeInDown animated">         
                {% for block in section.blocks %} 
                {% if block.settings.title != blank %}
                <li><a href="#" class="tabs-{{ block.id }}">{{ block.settings.title }} </a></li>           
                {% endif %}
                {% endfor %}
              </ul>
              {% for block in section.blocks %}
              {%- assign collection = collections[block.settings.collection] -%}   
              {%- assign grid_item_width = ' ' -%}
              <div class="dt-sc-tabs-content">
                <ul class="tab2 {{ block.id }} owl-carousel owl-theme">
                  {% for product in collection.products %}
                  {% include 'product-grid-item' , grid_item_width:" " %}  
                  {% else %}
                  {% for i in (1..8) %}
                  <li class="grid__item item-row  on-sale" id="product-{{ i }}">
                    <div class="products">
                      <div class="product-container">
                        <a href="#" class="grid-link"> 
                          {% if forloop.index == 3 %}
                          <div class="featured-tag">
                            <span class="badge badge--sale">
                              <span class="gift-tag badge__text{% if sale_text.size > 7 %} badge__text--small{% endif %}">{{ 'products.product.sale' | t }}</span>
                            </span>
                          </div>{% endif %}

                          <div class="reveal"> 
                            {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                            {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }} 
                          </div>
                        </a>
                        <div class="ImageWrapper">
                          <div class="product-button">
                            <div class="button-row-1">
                              <a href="#" class="quick-view-text"> 
                                <i class="zmdi zmdi-eye"></i>
                              </a>
                              <a href="{{ product.url }}">                      
                                <i class="zmdi zmdi-link"></i>
                              </a>  
                            </div>
                            <div class="button-row-2">
                              <form action="#" method="post" class="variants clearfix" id="cart-form-6529189125">
                                <input type="hidden" name="id" value="21661289093">
                                <a href="#" class="add-cart-btn"><i class="zmdi zmdi-shopping-cart"></i> </a>
                              </form>
                              <a href="/account/login" class="wishlist"><i class="zmdi zmdi-favorite-outline"></i></a> 

                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="product-detail"> 
                        <a href="#" class="grid-link__title">Sample title {{ i }}</a>

                        <div class="grid-link__meta">
                          <div class="product_price"> <span class="money" data-currency-usd="$320.00">$0.00</span> </div>
                          <del class="grid-link__sale_price"><span class="money" data-currency-usd="$756.00">$0.00</span></del> </div>
                        <span class="spr-badge" id="spr_badge_6529189125" data-rating="0.0"> 
                          <span class="spr-starrating spr-badge-starrating"><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i></span> <span class="spr-badge-caption"> </span> </span>

                      </div>
                    </div>
                  </li>
                  {% endfor %} 
                  {% endfor %}
                </ul>
                <div class="tab_2_nav {{ block.id }} carousel-arrow"> </div>
              </div>
              <script type="text/javascript">       
                $(document).ready(function(){
                  var tab2 = $('.tab2.{{ block.id }}');
                               tab2.owlCarousel({
                               loop:false,                      
                               nav:true,
                               navContainer: ".tab_2_nav.{{ block.id}}",
                               navText: ['<a class="prev active"></a>','<a class="next"></a>'],
                               dots: false,                  
                               autoplayTimeout: 3000,
                               responsive:{
                               0:{
                               items: 1
                               },
                               568:{
                               items: 2
                               },
                               768:{
                               items:3
                               },
                               1000:{
                               items: 3
                               },
                               1200:{
                               items: 3
                               },
                               1600:{
                               items: 4
                               }
                               }
                               });
                });

              </script>
              {% endfor %}                
            </div><!--End tabs container-->
            {% endif %}
          </div>    
        </div>

      </div>
      {% for block in section.blocks %}
      <style>
        .product-tab-type-2 .full_width_tab ul.dt-sc-tabs  li a { color:{{ section.settings.tag_clr }}; }
        .product-tab-type-2 .full_width_tab ul.dt-sc-tabs  li a.tabs-{{ block.id }}:hover,.product-tab-type-2 .full_width_tab ul.dt-sc-tabs li a.current { color:{{ section.settings.tag_hover_clr }}; }
        .product-tab-type-2 .full_width_tab ul.dt-sc-tabs li a.current::after {background:{{section.settings.tag_hover_clr}};}
        .product-tab-type-2 .full_width_tab ul.dt-sc-tabs li a::before {background:{{section.settings.tag_border_clr}};}
        
        
{% if section.settings.heading_image_need %} .product-tab-type-2 .border-title h2 {  content:"";display:inline-block;background-repeat:no-repeat; -webkit-text-fill-color: transparent;  background: -o-linear-gradient(transparent, transparent);   -webkit-background-clip: text;  background-image: -webkit-linear-gradient(transparent, transparent), url({{ section.settings.heading_image | img_url: 'master' }});  background-position: left; background-size: 125%; } {% endif %}        
        
      </style>
      {% endfor %}
    </div> 
  </div>
</div>
<div class="dt-sc-hr-invisible-large"></div>   

{% schema %}
{
"name": "Product Tab",
"class": "index-section",
"max_blocks": 4,
"settings": [
{
      "type": "checkbox",
      "id": "heading_image_need",
      "label": "Show Heading Image ?"
      
    },	
{
      "type": "image_picker",
      "id": "heading_image",
      "label": "Image",
	  "info": "Size: 105x17"
      
    },
	{
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "New arrivals"
    },	
	{
      "type": "color",
      "id": "title_color",
      "label": "Heading Color",
      "default": "#000"
    },	
	{
      "type": "text",
      "id": "small_title",
      "label": "Small Heading"
    },
	{
      "type": "color",
      "id": "small_title_color",
      "label": "Small Heading Color",
      "default": "#000"
    },	
{
"type": "color",
"id": "tag_clr",
"label": "Tag Color",
"default": "#000"
},
{
"type": "color",
"id": "tag_hover_clr",
"label": "Tag Hover Color",
"default": "#fff"
},
{
"type": "color",
"id": "tag_border_clr",
"label": "Tag Border Color",
"default": "#000"
}

],
"blocks": [	
{
"type": "text_block",
"name": "Column",
"settings": [
{
"type": "text",
"id": "title",
"label": "Collection Name",
"default": "Tab Name"
},	

{
"id": "collection",
"type": "collection",
"label": "Collection"
}	
]
}
],
"presets": [
{
"name": "Product Tab",
"category": "Collection",
"blocks": [
{
"type": "text_block"
}        
]
}
]
}
{% endschema %}
