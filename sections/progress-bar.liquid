<div data-section-id="{{ section.id }}"  data-section-type="progress-bar" class="progress-bar">       

  <div class="progress-bar-wrapper" style="background:{{section.settings.bg_color}};">
    <div class="grid">


      <div class="grid__item wide--one-half post-large--one-half large--one-whole medium--one-whole wow fadeIn animated">
        <div class="progress-bar-img">

          {% if section.settings.image_bg != blank %} 
          <img src="{{ section.settings.image_bg | img_url: '1920X' }}" />
          {% else %}
          <img src="//via.placeholder.com/950x700">
          {% endif %}
          {% if section.settings.spl_offer_txt != blank %} 
          <div class="progress-spl-txt wow bouceIn ">


            {% if section.settings.spl_offer_txt_heading != blank %} 
            <h6>{{section.settings.spl_offer_txt_heading}}</h6>
            {% endif %}

            <span class="">{{section.settings.spl_offer_txt}}</span>


            {% if section.settings.spl_offer_txt_subheading != blank %} 
            <h4>{{section.settings.spl_offer_txt_subheading}}</h4>
            {% endif %}


          </div>
{% endif %}

          <div class="progress-img-overlay"></div>

        </div>
      </div>
      
      <div class="grid__item wide--one-half post-large--one-half large--one-whole medium--one-whole wow fadeIn animated">
        <div class="progress-block">
          {% if section.settings.title != blank %}

          <h5 class="small-title" style="color:{{ section.settings.title_color }};">{{ section.settings.title }}</h5>

          {% endif %} 
          {% if section.settings.title_1 != blank %}
          <h2 style="color:{{ section.settings.title_1_clr }};">{{ section.settings.title_1 }}</h2>
          <div class="dt-sc-hr-invisible-medium"></div>
          {% endif %}  

          {% if section.settings.text_1 != blank %}
          <p style="color:{{ section.settings.text_1_clr }};">{{ section.settings.text_1 }}</p>
          {% endif %}  
          <div class="dt-sc-hr-invisible-medium"></div>




          <ul>
            {% if section.blocks.size > 0 %}      
            {% for block in section.blocks %}           
            <li class="grid__item  wide--one-third post-large--one-third large--one-third medium--one-third">      
              <div class="dt-sc-donutchart-medium"> 
                <div class="icon-desc">
                  {% if block.settings.value != blank %} 
                  <div class="dt-sc-donutchart{{ forloop.index }} dt-sc-donutchart-val" data-percent="{{ block.settings.value }}" >
                  </div>   
                  {% endif %}
                  {% if block.settings.heading != blank %}
                  <h6 class="dt-sc-donutchart-title">{{ block.settings.heading }}</h6>
                  {% endif %}
                </div>
              </div>      
            </li>   
            {% endfor %}  
            {% endif %}   
          </ul>

          <div class="grid__item">
            {% if section.settings.link_1 != blank  %}
            <div class="dt-sc-hr-invisible-medium"></div>
            <a class="btn" href="{{ section.settings.link_1 }}">{{ section.settings.button_1 }}</a>    
            {% endif %} 
          </div>

        </div>
      </div>
    </div>
  </div>



 
  <style type="text/css">
    .progress-bar .main-title h3 {color:{{ section.settings.title_color }}; }
    .progress-bar .description {color:{{ section.settings.text_color }}; }    
    .progress-bar .dt-sc-donutchart-title {color:{{ section.settings.heading_color }}; }
    .progress-bar .dt-sc-donutchart-val {color:{{ section.settings.value_color }}; width:100% !important; }    
    {% if section.settings.overlay_bg_use %}  .progress-bar .progress-img-overlay{background-color:{{ section.settings.overlay_bg_clr | color_modify: 'alpha', 0.7 }}; } {% endif %}


    .progress-bar-wrapper .progress-spl-txt,.progress-bar-wrapper .progress-spl-txt h6,.progress-bar-wrapper .progress-spl-txt h4{color:{{section.settings.offertext_clr}};}
    .progress-bar-wrapper .progress-spl-txt{border:1px dashed {{section.settings.offertext_clr}};}
  </style>
  <div class="dt-sc-hr-invisible-large"></div>
</div>
